<li>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Добавлено <%= time_ago_in_words(micropost.created_at) %> назад.
  </span>
  <% if current_user?(micropost.user) %>
  <% link_to "удалить", micropost, method: :delete, data: { confirm: "Вы уверены?" }, title: micropost.content %>
  <% end %>
</li>